<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.blog.chocoffee.wordcards" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="jp.blog.chocoffee.wordcards.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="jp.blog.chocoffee.wordcards.CardActivity"
            android:label="@string/title_activity_card" >
        </activity>
        <activity
            android:name="jp.blog.chocoffee.wordcards.EditActivity"
            android:label="@string/title_activity_edit" >
        </activity>
        <activity
            android:name="jp.blog.chocoffee.wordcards.CardListActivity"
            android:label="@string/title_activity_card_list" >
        </activity>
    </application>

</manifest>
